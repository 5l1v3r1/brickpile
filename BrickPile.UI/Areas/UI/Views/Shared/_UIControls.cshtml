
@model IPage
@using BrickPile.Core
@using BrickPile.UI.Common

<style type="text/css">
    @@font-face {
      font-family: "feather";
      src:url("/areas/ui/content/fonts/feather-webfont.eot");
      src:url("/areas/ui/content/fonts/feather-webfont.eot?#iefix") format("embedded-opentype"),
        url("/areas/ui/content/fonts/feather-webfont.woff") format("woff"),
        url("/areas/ui/content/fonts/feather-webfont.ttf") format("truetype"),
        url("/areas/ui/content/fonts/feather-webfont.svg#feather") format("svg");
      font-weight: normal;
      font-style: normal;
    }
     #menu {        
         height: 38px;
         width: 45px;
         display: block;
         position: fixed;
         z-index: 9999;
         overflow-y: hidden;
         text-align: center;
         top: 20px;
         left: 20px;
         background-color: transparent;
     }
    #menu:hover {
        width: 170px;
        height: 172px;
    }
    #menu a,
    #menu span {
        display: none;
        text-indent: -9999px;
        position: relative;
        padding: 13px 0 6px;
        color: #28353d !important;
        -moz-transition: color 0.5s, background 0.7s, -moz-border-radius 0.7s, text-indent 0.2s;
        -webkit-transition: color 0.5s, background 0.7s, -webkit-border-radius 0.7s, text-indent 0.2s;
        -o-transition: color 0.5s, background 0.7s, border-radius 0.7s, text-indent 0.2s;
        transition: color 0.5s, background 0.7s, border-radius 0.7s, text-indent 0.2s;
        -webkit-tap-highlight-color: rgba(0,0,0,0);

    }
    #menu a:first-child:hover {
        text-indent: -9999px;
    }
    #menu:hover>a,
    #menu:hover>span {
        display: block;
    }
    #menu:hover>a:first-child:after {
      color: #28353d;
      text-decoration: none;
      background-color: #e6e6e6;
      background-position: 0 -15px;
    }
    #menu a:first-child {
        display: block;
        text-align: center;
        margin-bottom: 13px;
        cursor: default;
    }
    #menu a:after,
    #menu span:after {
        position: absolute;
        top: 0;
        padding: 8px 0;
        width: 45px;
        color: #28353d;
        font-family: 'feather';
        font-size: 20px;
        display: block;
        text-indent: 0;        
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        speak: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        background-color: #fff;
        border:solid 3px #28353d;
        box-sizing: border-box;
    }
    #menu a:hover,
    #menu span:hover {
        text-indent: 0;
        text-align: left;
        margin-left: 55px;
    }
    #menu a:hover:after,
    #menu span:hover:after {
        color: #999;
        background: #fff;
        text-align: center;
        margin-left: -55px;
    }
    #menu a:first-child:before {
        position: absolute;
        text-indent: 0;
        top: 45px;
        left: 15px;
        content: "";
        width: 0;
        height: 0;
        border-left: 7px solid transparent;
        border-right: 7px solid transparent;
        border-bottom: 7px solid rgba(40,53,61,1);
    }
    #menu a:first-child:hover:before {
        margin-left: -55px;
    }
    #menu a:first-child:after {
        left: 0;
        content: "\e120";
        background-color: #f5f5f5;
        background-image: linear-gradient(#ffffff, #e2e6da);
        background-repeat: repeat-x;
        border: 1px solid #afafaf;
        border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
        border-color: #d3d2d1 #c1c0c0 #afafaf;
        border-bottom-color: #afafaf;
        border-radius: 4px;
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
    }
    #menu a:nth-child(2):after {
        content: "\e021";
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        border-bottom-width: 0;
    }
    #menu a:nth-child(3):after,
    #menu span:nth-child(3):after {
        content: "\e003";
        border-bottom-width: 0;
        border-top-width: 0;
        padding-bottom: 14px;
    }
    #menu a:last-child:after {
        content: "\e034";
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
        border-top-width: 0;
    }
    #menu span:after {
        color: #999;
    }

</style>
<nav id="menu">
    <a href="#">Editor tools</a>
    <a href="@Url.Action("Index", "Pages", new { currentPage = Model , area = "UI" })">Dashboard</a>
    @{
        var editorAction = TempData["EditorAction"] is EditorAction ? (EditorAction) TempData["EditorAction"] : EditorAction.None;
    }
    @if (editorAction == EditorAction.Preview)
    {
        <a href="@Url.Action(Model)">Toggle preview</a>
    }
    else
    {
        <a href="@Url.Action("Preview", "Pages", new {currentPage = Model, area = "UI"})">Toggle preview</a>
    }
    <a href="@Url.Action("Edit","Pages", new { currentPage = Model, area = "UI" })">Edit page</a>
</nav>
