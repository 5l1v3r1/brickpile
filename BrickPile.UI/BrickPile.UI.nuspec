<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>BrickPile</id>
		<version>0.1.0.0</version>
    <title>BrickPile</title>
    <summary>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 5</summary>
		<authors>Marcus Lindblom</authors>
		<owners>Marcus Lindblom</owners>
    <licenseUrl>https://github.com/brickpile/brickpile/blob/master/LICENSE.txt</licenseUrl>
    <projectUrl>https://github.com/brickpile/brickpile</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 5</description>
		<tags>brickpile cms ravendb mvc nosql</tags>
    <dependencies>
      <dependency id="Microsoft.AspNet.Mvc" version="5.2.3" />
      <dependency id="Microsoft.AspNet.WebApi" version="5.2.3" />
      <dependency id="Microsoft.Data.Edm" version="[5.6.3]" />
      <dependency id="Microsoft.Data.OData" version="[5.6.3]" />
      <dependency id="Microsoft.Data.Services.Client" version="[5.6.3]" />
      <dependency id="Microsoft.WindowsAzure.ConfigurationManager" version="[2.0.3]" />
      <dependency id="System.Spatial" version="[5.6.3]" />
      <dependency id="WindowsAzure.Storage" version="[4.3.0]" />    	
      <dependency id="Owin" version="1.0" />
      <dependency id="Microsoft.Owin" version="3.0.1" />
      <dependency id="Microsoft.Owin.Host.SystemWeb" version="3.0.1" />
      <dependency id="Microsoft.Owin.Security" version="3.0.1" />
      <dependency id="Microsoft.Owin.Security.Cookies" version="3.0.1" />
      <dependency id="Newtonsoft.Json" version="6.0.8" />
      <dependency id="RavenDB.Client" version="4.0.2" />
      <dependency id="structuremap" version="3.1.5.154" />
      <dependency id="structuremap.web" version="3.1.5.154" />
      <dependency id="SquishIt" version="0.9.5.4" />
