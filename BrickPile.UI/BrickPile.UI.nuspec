<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>BrickPile</id>
		<version>0.1.0.0</version>
    <title>BrickPile</title>
    <summary>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 4</summary>
		<authors>Marcus Lindblom</authors>
		<owners>Marcus Lindblom</owners>
    <licenseUrl>https://github.com/kloojed/BrickPile/blob/master/LICENSE.txt</licenseUrl>
    <projectUrl>http://www.getbrickpile.com</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 4</description>
		<tags>brickpile cms ravendb mvc nosql</tags>
    <dependencies>
      <dependency id="RavenDB.Embedded" version="2.5.2700" />
      <dependency id="structuremap" version="2.6.4.1" />
      <dependency id="WebActivatorEX" version="2.0.1" />
      <dependency id="SquishIt" version="0.9.2" />
    </dependencies>
  </metadata>
  <files>
    <file src="bin\BrickPile.Core.dll" target="lib\net40" />
    <file src="bin\BrickPile.Domain.dll" target="lib\net40" />
    <file src="bin\BrickPile.UI.dll" target="lib\net40" />
    <file src="Areas\UI\Views\**\*.*" target="content\Areas\UI\Views" />
    <file src="Areas\UI\Scripts\**\*.*" target="content\Areas\UI\Scripts" />
    <file src="Areas\UI\Styles\**\*.*" target="content\Areas\UI\Styles" />
    <file src="Areas\UI\Images\**\*.*" target="content\Areas\UI\Images" />
    <file src="Areas\UI\Content\**\*.*" target="content\Areas\UI\Content" />
    <file src="..\web.config.transform" target="content\" />
  </files>    
</package>
