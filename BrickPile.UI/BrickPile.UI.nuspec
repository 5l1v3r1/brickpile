    <file src="Areas\UI\Views\**\*.*" target="content\Areas\UI\Views" />
    <file src="Areas\UI\Scripts\**\*.*" target="content\Areas\UI\Scripts" />
    <file src="Areas\UI\Styles\**\*.*" target="content\Areas\UI\Styles" />
    <file src="Areas\UI\Images\**\*.*" target="content\Areas\UI\Images" />
    <file src="Areas\UI\Content\**\*.*" target="content\Areas\UI\Content" />
    <file src="..\web.config.transform" target="content\" />
  </files>    
</package>
