<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>BrickPile</id>
		<version>0.1.0.0</version>
    <title>BrickPile</title>
    <summary>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 5</summary>
		<authors>Marcus Lindblom</authors>
		<owners>Marcus Lindblom</owners>
    <licenseUrl>https://github.com/brickpile/brickpile/blob/master/LICENSE.txt</licenseUrl>
    <projectUrl>https://github.com/brickpile/brickpile</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 5</description>
		<tags>brickpile cms ravendb mvc nosql</tags>
    <dependencies>
      <dependency id="Microsoft.AspNet.Mvc" version="5.1.2" />
      <dependency id="Microsoft.AspNet.WebApi" version="5.1.2" />
      <dependency id="Owin" version="1.0" />
      <dependency id="Microsoft.Owin" version="2.1.0" />
      <dependency id="Microsoft.Owin.Host.SystemWeb" version="2.1.0" />
      <dependency id="Microsoft.Owin.Security" version="2.1.0" />
      <dependency id="Microsoft.Owin.Security.Cookies" version="2.1.0" />
      <dependency id="RavenDB.AspNet.Identity" version="0.9.0" />
      <dependency id="RavenDB.Embedded" version="2.5.2879" />
      <dependency id="structuremap" version="3.0.3.116" />
      <dependency id="structuremap.web" version="3.0.0.108" />
      <dependency id="SquishIt" version="0.9.5.4" />      
    </dependencies>
  </metadata>
  <files>
    <file src="bin\BrickPile.Core.dll" target="lib\net45" />
    <file src="bin\BrickPile.Domain.dll" target="lib\net45" />
    <file src="bin\BrickPile.UI.dll" target="lib\net45" />
    <file src="Areas\UI\Views\**\*.*" target="content\Areas\UI\Views" />
    <file src="Areas\UI\Scripts\**\*.*" target="content\Areas\UI\Scripts" />
    <file src="Areas\UI\Styles\**\*.*" target="content\Areas\UI\Styles" />
    <file src="Areas\UI\Images\**\*.*" target="content\Areas\UI\Images" />
    <file src="Areas\UI\Content\**\*.*" target="content\Areas\UI\Content" />
    <file src="..\web.config.transform" target="content\" />
  </files>    
</package>
