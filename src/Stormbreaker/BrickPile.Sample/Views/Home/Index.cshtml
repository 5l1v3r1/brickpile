			<a href="@Url.Action("index", new { model = Model.TeaserThree })">
				<h1>@Model.CurrentModel.TeaserThreeHeading</h1>
				<p>@Model.TeaserThree.MainIntro</p>
				<img src="@Model.CurrentModel.TeaserThreeImage">
			</a>
