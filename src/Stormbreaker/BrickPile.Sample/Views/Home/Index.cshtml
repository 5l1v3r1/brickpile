@model BrickPile.Sample.Web.ViewModels.HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="push">
	<a href="@Url.Action("index", new { model = Model.MainTeaser })"><img src="@Model.CurrentModel.MainTeaserImage" alt="@Model.CurrentModel.MainTeaserImageAlt" /></a>
</div>

