@using System.Globalization;

<!DOCTYPE html>
<html>
	<head>
		<title>@ViewBag.Title</title>
		<meta charset="utf-8" />
		<script src="@Url.Content("~/scripts/lib/jquery-1.4.4.js")"></script>
		<script src="@Url.Content("~/scripts/global.js")"></script>
		<link rel="stylesheet" href="@Url.Content("~/styles/global.css")" media="all" />        
		<link rel="stylesheet" href="@Url.Content("~/styles/framework.css")" media="all" />
		<link rel="stylesheet" href="@Url.Content("~/styles/templates.css")" media="all" />
