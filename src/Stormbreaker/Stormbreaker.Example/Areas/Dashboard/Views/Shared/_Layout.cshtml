           
@using System.Globalization;

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <title>Stormbreaker - dashboard</title>
    <meta charset="utf-8">
    <meta name="description" content="Foo" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/areas/dashboard/styles/global.css")" media="all" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/areas/dashboard/styles/dashboard.css")" media="all" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/areas/dashboard/styles/framework.css")" media="all" />
    <script type="text/javascript" src="@Url.Content("~/areas/dashboard/scripts/jquery-1.4.1.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/areas/dashboard/scripts/dashboard.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/areas/dashboard/scripts/tiny_mce/tiny_mce.js")"></script>
    <script type="text/javascript">
        tinyMCE.init({
                mode: "textareas",
                editor_selector: "tinymce",
                theme: "advanced",
                skin: "cirkuit",
                plugins: "paste",
                theme_advanced_toolbar_location: "top",
                theme_advanced_toolbar_align: "right",
                theme_advanced_buttons1: "media,formatselect,separator,bold,italic,underline,separator,bullist,numlist,separator,link,unlink,image,separator,code,separator,undo,redo,fullscreen",
                //theme_advanced_buttons1: "bold,italic,separator,blockquote,bullist,numlist,separator,link,unlink,indent,outdent,separator,code",
                theme_advanced_buttons2: "",
                theme_advanced_buttons3: "pastetext,pasteword,selectall",
		        paste_remove_styles : true,
                theme_advanced_path: true,
                theme_advanced_statusbar_location : "bottom",
                extended_valid_elements: "pre[name|class|cols|rows]",
                remove_linebreaks : false,
                convert_urls: false
        });
    </script>
</head>
<body class="overlaid">
    <header>
        <nav role="navigation">
            <ul>
                <li>@Html.ActionLink("Dashboard","index","dashboard")</li>
                @if(Request.IsAuthenticated) {
                    <li>
                    @Html.ActionLink("Log Off", "logoff", "account")
                    </li>
                }
                else {
                <li>
                    @Html.ActionLink("Log On", "logon", "account")  
                </li>
                }
            </ul>
        </nav>
        <p><strong>Last modification </strong><em>1 min ago</em></p>
    </header>
    <section>
        <section>
            @RenderBody()
        </section>
        <aside>
            <h1>Aside</h1>
        </aside>
        <nav>
        @RenderSection( "GlobalNavigation", required:false )
        </nav>
    </section>
    <footer>
        @RenderSection( "Footer", required:false )
    </footer>
</body>
</html>
