@model BrickPile.UI.Web.ViewModels.IViewModel<BrickPile.Domain.Models.IPageModel>
           
@using BrickPile.UI.Web.Mvc.Html
@using BrickPile.UI.Common
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <!--script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script-->
</head>

<body>
    <h2>Top menu</h2>
    @Html.Raw(Html.Menu(Model.StructureInfo,page => Html.ActionLink(page)))
    <h2>Sub menu</h2>
    @Html.Raw(Html.SubMenu(Model.StructureInfo,page => Html.ActionLink(page)))
    @RenderBody()
</body>
</html>
