@model BrickPile.Sample.ViewModels.IBaseViewModel<BrickPile.Sample.Models.BaseEditorial>
@using System.Globalization
@using SquishIt.Framework

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
	<head>
		<title>@Model.Title</title>
		<meta charset="utf-8" />
        @if (!string.IsNullOrEmpty(@Model.CurrentModel.Metadata.Description)) {
            <meta name="description" content="@Model.CurrentModel.Metadata.Description"/>                                                                                 
        }
        @Html.Raw(Bundle.Css()
            .Add(Url.Content("~/content/global.css"))
            .Add(Url.Content("~/content/framework.css"))
            .Add(Url.Content("~/content/views.css"))
            .Render("~/content/master.css"))
        @Html.Raw(Bundle.JavaScript()
            .Add(Url.Content("~/scripts/jquery-1.7.1.js"))
            .Add(Url.Content("~/scripts/global.js"))
            .Render("~/scripts/master.js"))
        
        <!--link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" /-->

	</head>
	<body class ="@Model.Class">
        <header role="banner">
            <nav>
                @Html.Partial("_GlobalNav")
		    </nav>
        </header>
        @if (IsSectionDefined("Heading")) {
            
            @RenderSection("Heading")

        } else {
            
            <h1><span>@Model.CurrentModel.Heading</span></h1>       
            
        }
	    <div id="content" role="main">
            <div>
                @if (IsSectionDefined("Main")) {
                    @RenderSection("Main")
                } else {
                    <article role="article">
                        @RenderBody()
                    </article>
                    <aside id="additional" role="complementary">
                        <nav>
                            <h2>Sub menu</h2>
                            @Html.Partial("_LocalNav")
                        </nav>
                    </aside>
                }
            </div>
            @RenderSection("Portfolio", false)
	    </div>
	    <footer>
            <div>
                <section id="textual-content">
                    <h2>Textual Content</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum eu ligula diam, et bibendum augue. Duis non quam tortor, sed tempus sapien.</p>                    <p>Praesent eu massa non urna tristique tristique vitae et mauris. Ut fermentum tempor ante at venenatis. Sed et iaculis mi. Mauris ornare auctor vestibulum.</p>                    <p>In hac habitasse platea dictumst. Quisque malesuada nulla quis lectus ultricies vel mattis.</p>
                </section>
                <section id="categories">
                    <h2>Textual Content</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum eu ligula diam, et bibendum augue. Duis non quam tortor, sed tempus sapien.</p>                    <p>Praesent eu massa non urna tristique tristique vitae et mauris. Ut fermentum tempor ante at venenatis. Sed et iaculis mi. Mauris ornare auctor vestibulum.</p>                    <p>In hac habitasse platea dictumst. Quisque malesuada nulla quis lectus ultricies vel mattis.</p>
                </section>
                <div id="contact">
                    <h2>Get in touch with us</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec turpis neque.</p>
                    <form method="POST" action="/">
                        <input type="text" placeholder="Your Name"/>
                        <input type="text" placeholder="Your Email"/>
                        <input type="text" placeholder="Your Subject"/>
                        <textarea placeholder="Message"></textarea>
                        <input type="image" src="/Content/submit.png" alt="Submit"/>
                    </form>
                </div>
            </div>
	    </footer>
	</body>
</html>
