@model List<string>
@using BrickPile.UI.Common

@* Add external javascript and style sheets used by the property *@

@Html.Section(@<script src="@Url.Content("~/scripts/jquery.tagsinput.min.js")" type="text/javascript"></script>, "scripts")
@Html.Section(@<link rel="stylesheet" type="text/css" href="@Url.Content("~/content/jquery.tagsinput.css")" />, "styles")

@{
    var htmlFieldPrefix = ViewData.TemplateInfo.HtmlFieldPrefix.Replace('.', '_');
    var tags = Model != null ? string.Join(",", Model) : "";
}

<script type="text/javascript">
    $(function () {
        $('#@htmlFieldPrefix').tagsInput({
                width: 588
            });
    })
</script>
<input type="text" id="@htmlFieldPrefix" name="@ViewData.TemplateInfo.HtmlFieldPrefix" value="@tags" />
