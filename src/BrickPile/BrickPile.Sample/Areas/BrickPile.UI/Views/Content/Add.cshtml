
@model BrickPile.UI.Models.NewModel
@using BrickPile.UI.Common

<aside class="overlay"> 
    <h1>Create a new page</h1>
    @Html.ValidationSummary()
    @using (Html.BeginForm("new", "content", new { model = Model.CurrentModel }, FormMethod.Post, new { name = "editForm" }))
    {
        @Html.RadioButtonForSelectList(m => m.SelectedPageModel, new SelectList(Model.AvailableModels, "Value", "Text"))
    }
</aside>

