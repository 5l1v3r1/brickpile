<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>BrickPile</id>
		<version>0.2</version>
    <title>BrickPile</title>
    <summary>BrickPile is a lightweight CMS built on RavenDB and ASP.NET MVC 3</summary>
		<authors>Marcus Lindblom</authors>
		<owners>Marcus Lindblom</owners>
    <licenseUrl>https://github.com/kloojed/BrickPile/blob/master/README</licenseUrl>
    <projectUrl>http://www.getbrickpile.com</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>BrickPile offers a flexible and easy to understand way of creating page templates and custom properties for the dashboard UI.</description>
		<tags>CMS RavenDB MVC</tags>
    <dependencies>
      <dependency id="ELMAH" version="1.2.0.1" />
      <dependency id="RavenDB" version="1.0.0.371" />
      <dependency id="WebActivator" version="1.4.1" />
      <dependency id="structuremap" version="2.6.2" />
    </dependencies>
  </metadata>
  <files>
    <file src="${project.buildDir}\Dlls\Release\BrickPile.Core.dll" target="lib" />
    <file src="${project.buildDir}\Dlls\Release\BrickPile.Domain.dll" target="lib" />
    <file src="${project.buildDir}\Dlls\Release\BrickPile.Services.dll" target="lib" />
    <file src="${project.buildDir}\Dlls\Release\BrickPile.UI.dll" target="lib" />
    <file src="${project.buildDir}\Dlls\Release\BrickPile.Raven.dll" target="content\App_Data\Plugins" />
    <file src="${action.workDir}\web.config.transform" target="content" />
    <file src="${action.workDir}\BrickPile.Sample\Areas\BrickPile.UI" target="content\Areas\BrickPile.UI" />
  </files>
</package>